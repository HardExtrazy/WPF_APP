<Window x:Class="WPF_APP.RegistrationForm"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_APP"
        mc:Ignorable="d"
        Title="RegistrationForm" Height="450" Width="400" MinHeight="450" MinWidth="350"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        ResizeMode="NoResize">
    <Grid>
      <Border
          CornerRadius="20"
          BorderThickness="1"
          Background="#b4b6b5"
          Margin="10">
        <Border
            CornerRadius="20"
            BorderThickness="1"
            Background="#eaf0f3"
            Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="2">
                        <Button x:Name ="Exit" Style="{StaticResource MaterialDesignFloatingActionButton}"
                                Background="#1d7d97"
                                Foreground="#16596b"
                                ToolTip="Закрыть"
                                Click="btnExit_Click"
                                BorderBrush="#16596b"
                                Cursor="Hand" Width="25"
                                Height="25"
                                Margin="10 0 10 10">
                            <materialDesign:PackIcon
                                Kind="Close"
                                Foreground="#eaf0f3"
                                Width="15" Height="15"/>
                        </Button>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,10,0,90">
                        <Label
                            Content="ОКНО РЕГИСТРАЦИИ"
                            FontFamily="Segoe Print"
                            FontSize="15"
                            Padding="0"
                            Margin="-1.5 10 0 5"
                            HorizontalAlignment="Left"
                            Foreground="{StaticResource MaterialDesignShadowBrush}"/>
                        <TextBox
                            x:Name="Login"
                            Style = "{StaticResource MaterialDesignOutlinedTextBox}"
                            materialDesign:TextFieldAssist.LeadingIcon="User"
                            materialDesign:HintAssist.Hint="Имя пользователя"
                            materialDesign:HintAssist.Foreground="Black"
                            materialDesign:HintAssist.FontFamily="Arial"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"                            
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.NewSpecHighlightingEnabled="False"
                            CaretBrush="Black"
                            SelectionBrush="Black"
                            Padding="5 5 5 5"
                            Margin="0 5 0 10"/>
                        <TextBox
                            x:Name="Email"
                            Style = "{StaticResource MaterialDesignOutlinedTextBox}"
                            materialDesign:TextFieldAssist.LeadingIcon="Mailbox"
                            materialDesign:HintAssist.Hint="Электронная почта"
                            materialDesign:HintAssist.Foreground="Black"
                            materialDesign:HintAssist.FontFamily="Arial"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"                            
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.NewSpecHighlightingEnabled="False"
                            CaretBrush="Black"
                            SelectionBrush="Black"
                            Padding="5 5 5 5"
                            Margin="0 0 0 10"/>
                        <PasswordBox
                            x:Name="Password"
                            Style = "{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                            materialDesign:TextFieldAssist.LeadingIcon="PasswordAdd"
                            materialDesign:HintAssist.Hint="Пароль"
                            materialDesign:HintAssist.Foreground="Black"
                            materialDesign:HintAssist.FontFamily="Arial"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"                            
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.NewSpecHighlightingEnabled="False"
                            CaretBrush="Black"
                            SelectionBrush="Black"
                            Padding="5 5 5 5"
                            Margin="0 0 0 10"/>
                        <PasswordBox
                            x:Name="repiatPassword"
                            Style = "{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                            materialDesign:TextFieldAssist.LeadingIcon="PasswordAddOutline"
                            materialDesign:HintAssist.Hint="Повторите пароль"
                            materialDesign:HintAssist.Foreground="Black"
                            materialDesign:HintAssist.FontFamily="Arial"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"                            
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.NewSpecHighlightingEnabled="False"
                            CaretBrush="Black"
                            SelectionBrush="Black"
                            Padding="5 5 5 5"
                            Margin="0 0 0 10"/>
                        <ComboBox
                            x:Name="Role"
                            Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                            materialDesign:TextFieldAssist.LeadingIcon="Woman"
                            materialDesign:HintAssist.Hint="Должность"
                            materialDesign:HintAssist.Foreground="Black"
                            materialDesign:HintAssist.FontFamily="Arial"
                            materialDesign:TextFieldAssist.UnderlineBrush="Black"                            
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.NewSpecHighlightingEnabled="False"                            
                            Padding="5 5 5 5"
                            Margin="0 0 0 10"/>
                    </StackPanel>
                    
                </Grid>
        </Border>
      </Border>
    </Grid>
</Window>
